<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DashFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connect_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ip_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ip_container"
            app:layout_constraintEnd_toStartOf="@id/ip_container"
            app:layout_constraintBottom_toBottomOf="@id/ip_container"
            android:layout_marginHorizontal="@dimen/default_margin_8dp"
            />

        <LinearLayout
            android:id="@+id/ip_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ip_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/connect_button"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/ip_input1"
                android:layout_width="@dimen/ip_input_length"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:inputType="numberDecimal"
                tools:text="999"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/ip_dot"
                />
            <EditText
                android:id="@+id/ip_input2"
                android:layout_width="@dimen/ip_input_length"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:inputType="numberDecimal"
                tools:text="999"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/ip_dot"
                />
            <EditText
                android:id="@+id/ip_input3"
                android:layout_width="@dimen/ip_input_length"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:inputType="numberDecimal"
                tools:text="999"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/ip_dot"
                />
            <EditText
                android:id="@+id/ip_input4"
                android:layout_width="@dimen/ip_input_length"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:inputType="numberDecimal"
                tools:text="999"
                />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/port_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/port_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="@id/port_input"
            app:layout_constraintStart_toEndOf="@id/ip_container"
            app:layout_constraintEnd_toStartOf="@id/port_input"
            app:layout_constraintBottom_toBottomOf="@id/port_input"
            android:layout_marginHorizontal="@dimen/default_margin_8dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/port_input"
            android:layout_width="@dimen/port_input_length"
            android:layout_height="wrap_content"
            tools:text="9999"
            android:text="@string/base_port"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/port_label"
            app:layout_constraintTop_toTopOf="@id/ip_container"
            app:layout_constraintBottom_toBottomOf="@id/ip_container"
            android:layout_marginHorizontal="8dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_margin="@dimen/default_margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/ip_container"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/connection_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StatusIcon"
            android:layout_marginHorizontal="@dimen/default_margin_8dp"
            android:src="@drawable/signal_disconnected_24"
            app:layout_constraintTop_toTopOf="@id/connect_button"
            app:layout_constraintBottom_toBottomOf="@id/connect_button"
            app:layout_constraintEnd_toStartOf="@id/communicating_icon"
            app:layout_constraintStart_toEndOf="@id/connect_button"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <ImageView
            android:id="@+id/communicating_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StatusIcon"
            android:src="@drawable/communicating_24"
            android:layout_marginHorizontal="@dimen/default_margin_8dp"
            app:layout_constraintTop_toTopOf="@id/connect_button"
            app:layout_constraintBottom_toBottomOf="@id/connect_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/connection_icon"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/default_margin_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/connect_panel"
            app:layout_constraintBottom_toTopOf="@id/change_value_panel"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_value_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/compose_view"
        app:layout_constraintBottom_toTopOf="@id/debug_text"
        >
        <TextView
            android:id="@+id/register_to_change_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/default_margin_8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/register_to_change_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/register_to_change"
            app:layout_constraintBottom_toTopOf="@id/output_type_group"
            />
        <EditText
            android:id="@+id/register_to_change"
            android:layout_width="@dimen/port_input_length"
            android:layout_height="wrap_content"
            tools:text="100"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@id/register_to_change_label"
            app:layout_constraintTop_toTopOf="@id/register_to_change_label"
            app:layout_constraintBottom_toBottomOf="@id/register_to_change_label"
            app:layout_constraintEnd_toStartOf="@id/new_value_label"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/new_value_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_value_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toEndOf="@id/register_to_change"
            app:layout_constraintTop_toTopOf="@id/register_to_change_label"
            app:layout_constraintBottom_toBottomOf="@id/register_to_change_label"
            app:layout_constraintEnd_toStartOf="@id/new_value"
            />
        <EditText
            android:id="@+id/new_value"
            android:layout_width="@dimen/value_input_length"
            android:layout_height="wrap_content"
            tools:text="-1202312"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@id/new_value_label"
            app:layout_constraintTop_toTopOf="@id/register_to_change_label"
            app:layout_constraintBottom_toBottomOf="@id/register_to_change_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="numberSigned"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/new_value_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/output_type_group"
            />

        <RadioGroup
            android:id="@+id/output_type_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/new_value_send_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_value"
            >
            <RadioButton
                android:id="@+id/radio_uint16"
                android:text="@string/type_uint16"
                android:checked="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_int16"
                android:text="@string/type_int16"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_int32"
                android:text="@string/type_int32"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radio_real32"
                android:text="@string/type_real32"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/debug_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/debug_text_height"
        android:background="@color/dark_gray"
        android:textColor="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical"
        android:padding="@dimen/default_margin_8dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text = "Debug text here. All kinds of stuff.\nNew line here\nAnother new line"
        />

</androidx.constraintlayout.widget.ConstraintLayout>